.chat-item-container {
  display: flex;
  justify-content: space-between;
  padding: 12px 10px;
  cursor: pointer;
  border-top: 1px solid var(--gray-border);
}

.chat-item {
  transition: background-color 0.2s ease;
}

.chat-item:hover {
  background-color: var(--gray-hover);
}

.chat-item__avatar {
  width: 47px;
  height: 47px;
  margin-right: 10px;
}

.chat-item__content {
  flex-grow: 1;
}

.chat-item__name {
  font-size: var(--base-font-size);
  font-weight: 600;
  line-height: var(--base-line-height);
  margin-bottom: 4px;
}

.chat-item__last-message {
  font-size: var(--base-font-size);
  font-weight: var(--base-font-weight);
  line-height: var(--base-line-height);
  color: var(--chat-item-message);
}

.chat-item__meta {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  flex-direction: column;
}

.chat-item__time {
  font-size: 12px;
  color: #888;
}

.chat-item__is-own {
  color: var(--gray-color);
}

.chat-item__unread-count {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  font-size: 11px;
  color: #fff;
  background-color: var(--primary-color);
}

.chat-item.active {
  background-color: var(--active-chat-bg);
}
