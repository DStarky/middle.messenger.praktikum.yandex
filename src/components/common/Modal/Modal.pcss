.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background-color: rgb(255 255 255 / 40%);
}

.modal-content {
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 2px 10px rgb(0 0 0 / 10%);
  background-color: #fff;
  max-height: 90vh;
  overflow-y: auto;
}

.modal-content_small {
  width: 340px;
}

.modal-content_auto {
  width: auto;
}
