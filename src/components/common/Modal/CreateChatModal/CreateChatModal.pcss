.create-chat-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
  width: 100%;
}

.create-chat-form__header h3 {
  font-size: 15px;
  font-weight: 600;
  line-height: 20px;
  color: var(--gray-color);
}

.create-chat-form__body {
  width: 100%;
}

.create-chat-form__footer {
  width: 100%;
}

.create-chat__error-message {
  font-size: 12px;
  color: red;
  margin-top: 4px;
}

.create-chat__loader {
  margin-top: 16px;
}
