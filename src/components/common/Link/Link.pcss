.default-link {
  font-size: 11px;
  line-height: var(--base-line-height);
  color: #3369f3;
  text-decoration: none;
  transition: color 0.3s;
}

.default-link:hover {
  color: #0056b3;
  text-decoration: underline;
}

.sidebar-link {
  font-size: 12px;
  font-weight: var(--base-font-weight);
  line-height: var(--base-line-height);
  color: var(--chat-item-message);
}
