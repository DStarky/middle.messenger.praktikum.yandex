.error-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.error-page__title {
  font-size: 40px;
  margin-bottom: 20px;
  color: var(--gray-color);
  line-height: var(--base-line-height);
  font-weight: var(--base-font-weight);
}

.error-page__text {
  font-size: 20px;
  margin-bottom: 68px;
  color: var(--gray-color);
  line-height: var(--base-line-height);
  font-weight: var(--base-font-weight);
}