.error-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.error-page__title {
  font-size: 40px;
  font-weight: var(--base-font-weight);
  line-height: var(--base-line-height);
  color: var(--gray-color);
  margin-bottom: 20px;
}

.error-page__text {
  font-size: 20px;
  font-weight: var(--base-font-weight);
  line-height: var(--base-line-height);
  color: var(--gray-color);
  margin-bottom: 68px;
}
